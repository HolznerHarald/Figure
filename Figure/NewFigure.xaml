<Window x:Class="Figure.NewFigure"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Figure"
        mc:Ignorable="d"
        Title="ImageOption" Height="420" Width="420">
    <StackPanel Margin="10">
        <Label FontWeight="Bold" Margin="5">Figur-Optionen</Label>
        <RadioButton Name="RB1" Margin="5">5-Eck</RadioButton>
        <RadioButton Name="RB2" Margin="5">6-Eck</RadioButton>
        <RadioButton Name="RB3" Margin="5">7-Eck</RadioButton>
        <RadioButton Name="RB4" Margin="5">8-Eck</RadioButton>
        <Separator/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Click="Button_Click"  Grid.Column="0" Margin="10" >Ok</Button>
            <Button Click="Button1_Click" Grid.Column="2" Margin="10">Abbrechen</Button>
        </Grid>
    </StackPanel>
</Window>
